{
  "compilerOptions": {
	"module": "commonjs",
	"baseUrl": "./",

	/* Bundler mode */
	"moduleResolution": "bundler",
	"allowImportingTsExtensions": true,
	"resolveJsonModule": true,
	"isolatedModules": true,
	"noEmit": true,
	"skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": [
	"node_modules",
	"./node_modules/",
	"./node_modules",     
	"./node_modules/*",
	"../lib",
  ],
}
